@page
@model EmployeeCafteriaCreditOrderingSystem.Pages.Employees.IndexModel
@{
}

<br />
<br />
<h3 class="text-center mb-3">Employee List</h3>

<a class="btn btn-primary" style="margin-bottom: 10px" asp-page="/Employees/Create">
    Create New Employee
    <span class="fa fa-plus" aria-hidden="true"></span>
</a>

<table class="table table-striped table-bordered display" id="employeeTable">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>EmployeeNumber</th>
            <th>Balance</th>
            <th>LastDepositMonth</th>
        </tr>
    </thead>

    <tbody class="table-group-divider">
        @foreach(var employee in Model.employeeList) {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.EmployeeNumber</td>
                <td>@($"{'R'}{employee.Balance}")</td>
                <td>@employee.LastDepositMonth.ToString("MM/yyyy")</td>
            </tr>
        }
    </tbody>
</table>
<link href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="//kit.fontawesome.com/25b366ba5c.js" crossorigin="anonymous"></script>
