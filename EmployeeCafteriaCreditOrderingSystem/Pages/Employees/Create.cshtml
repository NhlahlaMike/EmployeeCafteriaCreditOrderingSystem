@page
@model EmployeeCafteriaCreditOrderingSystem.Pages.Employees.CreateModel
@{
}

<br />
<br />
<h3 class="mb-3">New Employee</h3>

<form method="post">
    <div class="row g-2 mb-3">
        <div class="col-lg-6">

            <div class="card h-100">
                <div class="card-header">
                    Employee Details
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Employee Name</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="EmployeeDto.Name"/>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Employee Number</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="EmployeeDto.EmployeeNumber"/>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Employee Balance</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="EmployeeDto.Balance" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Employee LastDepositMonth</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="EmployeeDto.LastDepositMonth" />
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <a class="btn btn-outline-primary" asp-page="/Employees/Index">Cancel</a>
</form>